# Configuración del servidor LDAP Proxy
# Copia este archivo como .env y ajusta los valores según tu entorno

# Puerto del servidor (por defecto 4000)
PORT=4000

# Configuración LDAP del INE
LDAP_URL=ldap://ldap-pruebas.ine.mx:389
LDAP_USER_DN_PATTERN=uid={0},ou=People,dc=ife.org.mx
LDAP_GROUP_SEARCH_BASE=ou=Groups,dc=ife.org.mx
LDAP_GROUP_SEARCH_FILTER=(memberUid={1})
LDAP_GROUP_ROLE_ATTRIBUTE=cn

# Configuración JWT (CAMBIAR en producción)
JWT_SECRET=tu_clave_secreta_jwt_aqui_cambiar_en_produccion
JWT_EXPIRES=1h

# Configuración CORS
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Modo desarrollo
# true = Usa usuarios simulados (admin/test/demo con password 123456)
# false = Conecta al servidor LDAP real
DEV_MODE=false
